---
pagination:
    data: collections.rawChapters
    size: 1
    addAllPagesToCollections: true
permalink: read/{{pagination.items[0].data.number}}/
tags: pagedChapters
---

<!doctype html>
<html>
{% for chapter in pagination.items %}
    <head>
        {% include partials/headstuff %}
        <link rel="stylesheet" type="text/css" href="../../_styles/read.css">
        <title>{{ chapter.data.title }} | {{ global.title }}</title>
    </head>
    <body>
        {% include partials/darkmode %}
        <div class="page-wrapper">
            <div class="content-wrapper">
                {% include partials/header %}
                {% include partials/prevnext %}
                <main>
                    <h1 class="chaptertitle">
                        Chapter {{ chapter.data.number | romanNumerals }} &mdash; {{ chapter.data.title }}
                    </h1>
                    {{ chapter.templateContent }}
                </main>
                {% include partials/prevnext %}
                {% include partials/footer %}
            </div>
        </div>
        <script src="../../_scripts/darkmode.js"></script>
    </body>
{% endfor %}
</html>